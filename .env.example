# MCP Server Configuration
MCP_SERVER_NAME=shadcn-svelte-mcp
MCP_SERVER_VERSION=0.1.0
MCP_SERVER_DESCRIPTION="MCP server for shadcn-svelte component documentation"

# Logging Configuration
MCP_LOG_LEVEL=info # One of: error, warn, info, debug

# Rate Limiting
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_MAX_REQUESTS=100
MCP_RATE_LIMIT_TIME_WINDOW=60000 # In milliseconds (60 seconds)

# CORS Configuration
MCP_CORS_ENABLED=true
MCP_CORS_ALLOWED_ORIGINS=* # Comma-separated list of allowed origins, or * for all
MCP_CORS_ALLOWED_METHODS=GET,POST,OPTIONS # Comma-separated list of allowed methods
MCP_CORS_ALLOW_CREDENTIALS=true
MCP_CORS_MAX_AGE=86400 # In seconds (24 hours)

# Security Configuration
MCP_SECURITY_CSP_ENABLED=true
MCP_SECURITY_HSTS_ENABLED=true
MCP_SECURITY_XFRAME_ENABLED=true
MCP_SECURITY_XCONTENT_ENABLED=true

# Request Limits
MCP_MAX_REQUEST_SIZE=1048576 # In bytes (1MB)

# Deployment Configuration
PUBLIC_BASE_URL=/api/mcp # Base URL for MCP API endpoints